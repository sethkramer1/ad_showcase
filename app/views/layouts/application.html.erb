<!DOCTYPE html>
<html>
<head>
  <title>AdShowcase</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href="https://fonts.googleapis.com/css?family=Overpass" rel="stylesheet">
  <link href="http://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.1/normalize.min.css" rel="stylesheet"></link>
  <link href="http://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet"></link>

</head>

<body>
  <header>
    <div class="wrapper clearfix">
      <div id="logo">
        <%= link_to image_tag("https://i.imgur.com/JUbkIuB.png"), root_path %>
      </div>
      <nav>


          <%= link_to "Submit Ad", new_post_path %>

          <%= link_to "About", new_post_path %>






      </nav>
    </div>

  </header>


  <div id="search-bar">
      <%= form_tag(posts_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Company Name", class: 'box-search' %>
        <%= submit_tag "Search", class: 'searching' %>
      <% end %>

  </div>


  <p class="notice">
    <%= notice %>
  </p>
  <p class="alert">
    <%= alert %>
  </p>
  <div class="wrapper">
    <%= yield %>
  </div>
</body>
