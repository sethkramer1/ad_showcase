


<div class = "post">
  <div class = "post_image">
    <%= image_tag @post.url %>
  </div>


<h1>
  <%= @post.company %>
</h1>

<h2>
  <%= @post.description %>
</h2>

<p>
  <strong>Category:</strong>
  <%= @post.category %>
</p>


<%= link_to "Like", like_post_path(@post), method: :get %>


<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>


</div>
