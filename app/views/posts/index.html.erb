
<div id="pagination">

<%= will_paginate @posts %>
</div>


<div class = "filter-title">
Filters
</div>

<div id ="filters">
  <%= link_to fa_icon('facebook-square', text: "Facebook"), facebook_posts_path %>

  <%= link_to fa_icon('instagram', text: "Instagram"), facebook_posts_path %>
  <%= link_to fa_icon('google', text: "Adwords"), facebook_posts_path %>
  <%= link_to fa_icon('desktop', text: "Display"), facebook_posts_path %>



</div>



<div id="posts" class = "transitions-enabled">
  <% @posts.each do |post| %>

   <div class = "box panel panel-default">

    <div class="post">
      <div class="post_image">
        <%= link_to (image_tag post.url), post %>
      </div>
      <div class="post_content">
        <div class="company">
          <h2>
            <%= link_to post.company, post %>
          </h2>
        </div>
      </div>
    </div>
  </div>

  <% end %>
</div>


