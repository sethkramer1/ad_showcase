
<div id="pagination">

<%= will_paginate @posts %>
</div>


<%= link_to "Top of the week", top_posts_path %>



<div class = "filter-title">
Filter
</div>

<div id ="filters">







  <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          Choose Industry <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li><%= link_to fa_icon('shopping-cart', text: "E-Commerce"), ecommerce_posts_path %></li>
          <li><%= link_to fa_icon('globe', text: "Travel"), travel_posts_path %></li>
          <li><%= link_to fa_icon('home', text: "Real Estate"), realestate_posts_path %></li>
          <li><%= link_to fa_icon('glass', text: "Food & Beverage"), food_posts_path %></li>
          <li><%= link_to fa_icon('car', text: "Transportation"), transportation_posts_path %></li>
          <li><%= link_to fa_icon('money', text: "Finance"), finance_posts_path %></li>
          <li><%= link_to fa_icon('medkit', text: "Healthcare"), healthcare_posts_path %></li>
          <li><%= link_to fa_icon('gamepad', text: "Games"), games_posts_path %></li>
          <li><%= link_to fa_icon('graduation-cap', text: "Education"), education_posts_path %></li>
          <li><%= link_to fa_icon('star', text: "Entertinment"), entertainment_posts_path %></li>
          <li><%= link_to fa_icon('cogs', text: "Other Software"), software_posts_path %></li>

          <li class="divider"></li>
        </ul>
      </div>







</div>



<div id="posts" class = "transitions-enabled">
  <% @posts.each do |post| %>

   <div class = "box panel panel-default">

    <div class="post">
      <div class="post_image">
        <%= link_to (image_tag post.url), post %>
      </div>
      <div class="post_content">
        <div class="company">
          <h2>
            <%= link_to post.company, post %>
          </h2>
        </div>
      </div>
    </div>
  </div>

  <% end %>
</div>


