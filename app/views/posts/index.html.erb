<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Description</th>
      <th>Category</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>

  <%= post.company %>
      <%= post.description %>
        <%= post.category %>

        <%= image_tag post.url %>

    
        <%= post.get_upvotes.size %>
        Likes

        <%= link_to "Like", like_post_path(post), method: :get %>

          <%= link_to 'Show', post %>
            <%= link_to 'Edit', edit_post_path(post) %>
        <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>
